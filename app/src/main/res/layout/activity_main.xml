<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
        android:id="@+id/departure"
        android:text="@string/departure_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/arrival"
        android:text="@string/arrival_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/departure_spinner"/>

    <Spinner
        android:id="@+id/departure_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/departure"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/arrival_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/departure"
        app:layout_constraintTop_toBottomOf="@id/departure_spinner"/>

    <Button
        android:id="@+id/show_stations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/station_button_text"
        android:onClick="showStations"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arrival_spinner"/>

</androidx.constraintlayout.widget.ConstraintLayout>